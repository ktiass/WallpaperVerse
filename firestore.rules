rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Users collection
    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if false; // Only server can write
    }

    // Wallpapers collection (public read)
    match /wallpapers/{wallpaperId} {
      allow read: if true;
      allow write: if false; // Only server/admin can write
    }

    // User ownership
    match /user_ownership/{uid}/items/{itemId} {
      allow read: if isOwner(uid);
      allow write: if false; // Only server can write
    }

    // Generations
    match /generations/{genId} {
      allow read: if isAuthenticated() &&
                     resource.data.uid == request.auth.uid;

      // Allow creation with proper uid
      allow create: if isAuthenticated() &&
                       request.resource.data.uid == request.auth.uid &&
                       request.resource.data.status == "queued";

      // Only server can update
      allow update, delete: if false;
    }

    // Receipts (server only)
    match /receipts/{receiptId} {
      allow read: if isAuthenticated() &&
                     resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    // Credit audit log (server only)
    match /credit_audit/{auditId} {
      allow read: if isAuthenticated() &&
                     resource.data.uid == request.auth.uid;
      allow write: if false;
    }
  }
}
